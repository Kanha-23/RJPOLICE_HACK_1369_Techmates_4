<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Table</title>
           <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        header {
            background-color: #007bff;
            color: #fff;
            padding: 20px;
            text-align: center;
            width: 100%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: fixed;
            top: 0;
            z-index: 1;
        }

        main {
            margin-top: 80px;
            /* Adjust based on header height */
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        table-container {
            width: 90%;
            max-height: 500px; /* Set the max height for the container */
            overflow: auto;
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        th,
        td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            min-width: 150px;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        form {
            text-align: center;
            margin-bottom: 20px;
        }

        input[type="text"],
        select {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-right: 10px;
        }

        button {
            padding: 10px 16px;
            cursor: pointer;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
        }
    </style>
</head>

<body>
    <h2>Complain Record</h2> 

    <!-- Search Form -->
    <form action="/history/search" method="post">
        <label for="searchTerm">Search:</label>
        <input type="text" id="searchTerm" name="searchTerm" placeholder="Enter search term">

        <!-- Select search type -->
        <select name="searchType" id="searchType">
            <option value="all">All</option>
            <option value="name">Name</option>
            <option value="date">Date</option>
            <option value="city">City</option>
        </select>

        <button type="submit">Search</button>
    </form>

    <table align="center" border="1">
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Occupation</th>
        <th>Number</th>
        <th>Email</th>
        <th>Date of Incident</th>
        <th>Location of Incident</th>
        <th>Pincode</th>
        <th>City</th>
        <th>District</th>
        <th>State</th>
        <th>Offence</th>
        <th>Details</th> <!-- Moved "Details" after "Offence" -->
        <th>People Involved</th>
        <th>Identity Proof</th>
        <th>Proof ID Number</th>
        <th>Name of Accused</th>
        <th>Age of Accused</th>
        <th>Address of Accused</th>
        <th>Occupation of Accused</th>
        <th>City of Accused</th>
        <th>District of Accused</th>
        <th>State of Accused</th>
        <th>Further process</th>
    </tr>

    <!-- Placeholder for dynamic data from the server -->
    {{#each Complain}}
    <tr>
        <td>{{this.name}}</td>
        <td>{{this.age}}</td>
        <td>{{this.occupation}}</td>
        <td>{{this.number}}</td>
        <td>{{this.email}}</td>
        <td>{{this.date}}</td>
        <td>{{this.loc}}</td>
        <td>{{this.pin}}</td>
        <td>{{this.city}}</td>
        <td>{{this.district}}</td>
        <td>{{this.state}}</td>
        <td>{{this.dis}}</td>
        <td>{{this.detail}}</td> <!-- Moved "detail" after "dis" (Offence) -->
        <td>{{this.people}}</td>
        <td>{{this.identityProof}}</td>
        <td>{{this.proof}}</td>
        <td>{{this.aname}}</td>
        <td>{{this.aage}}</td>
        <td>{{this.aaddress}}</td>
        <td>{{this.aoccupation}}</td>
        <td>{{this.acity}}</td>
        <td>{{this.adistrict}}</td>
        <td>{{this.astate}}</td>
        <td style="display: none;" class="complaint-id">{{this._id}}</td>
<td><button class="process" onclick="generatePDF(this)">Further Process</button></td>
    </tr>
    {{/each}}
</table>

